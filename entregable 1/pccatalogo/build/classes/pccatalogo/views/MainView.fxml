                  </VBox>
                  <VBox maxHeight="-Infinity" minHeight="240.0" prefHeight="300.0" spacing="10.0">
                     <children>
                        <Label fx:id="productoCategoria" text="Ningún producto seleccionado" />
                        <Label fx:id="productoDescripcion" text="descripcion" visible="false" />
                        <Label fx:id="productoPrecio" text="precio" visible="false" />
                        <Label fx:id="productoStock" text="stock" visible="false" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
